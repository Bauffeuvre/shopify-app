<h1>Image</h1>

<% if @image.path == "" %>
  <%= cl_image_tag @image.photo.key, style: "width= 400px" %>
<% else %>
  <img src=" <%= @image.path %>" alt="<% @image.title %>" width="400px">
<% end %>
<p> <%= @image.title %> </p>
<ul>
    <% @image.reviews.each do |review|  %>
  <li>
    <%= review.rating %>
    <%= review.content %>
  </li>
  <% end %>
</ul>
<%= link_to "Back to the list", images_path %>